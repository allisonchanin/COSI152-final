<h1>Possible Colors</h1>

<div style="overflow-y:auto;">
    <table class="table table-bordered table-striped">
      <thead>
            <th>sample</th>
            <th>name</th>
            <th>swatch</th>
            <th>add?</th>
        </thead>
        <tbody>
            <% for(color of colors){%> 
            <tr> 
                <td style="background-color:<%= color.hex %>;"></td>
                <td> <%= color.numberID %> <%= color.name %> </td> 
                <td>
                    <img 
                    width="40"
                    height="40"
                    src="<%=color.strImage %>" 
                    alt="swatch of <%=color.name %>"> 
                </td> 
                <td><a href="/addColor/<%= color._id%>">add</a></td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>